<section class="session-login">

  <header class="page-header">
    <h1>Login!</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
    

        <%= form_tag '/login' do %>

            <div class="form-group">
            Email
            <%= text_field :email, nil, class: 'form-control' %>
            </div>

            <div class="form-group">
            Password
            <%= password_field_tag :password, nil, class: 'form-control' %>
            </div>
            
            <%= submit_tag "Submit" %>

        <% end %>


    </div>
  </div>
  </section>